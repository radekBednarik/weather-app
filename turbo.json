{
  "globalDependencies": [
    ".env",
    "tsconfig.json"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/**"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "cache": false,
      "persistent": false
    }
  }
}
